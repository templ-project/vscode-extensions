{
  "name": "vscode-extensions",
  "version": "1.2.2",
  "type": "module",
  "description": "VSCode Extension Packs for different development environments",
  "main": "dist/index.js",
  "bin": {
    "vscode-ext-builder": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf packages dist",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint:check && npm run format:check && npm test",
    "compile:packages": "npm run compile --workspaces --if-present"
  },
  "keywords": [
    "vscode",
    "vscodium",
    "extension-pack",
    "development",
    "tools"
  ],
  "author": "templ-project",
  "license": "MIT",
  "workspaces": [
    "packages/*/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/vscode-extensions"
  },
  "dependencies": {
    "@jscpd/badge-reporter": "^4.0.1",
    "@templ-project/eslint": "^1.2.2",
    "@templ-project/prettier": "^1.0.6",
    "@templ-project/tsconfig": "^0.4.2",
    "@templ-project/vitest": "^0.3.2",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.5",
    "@vscode/vsce": "^3.2.1",
    "commander": "^14.0.2",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "ovsx": "^0.10.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
