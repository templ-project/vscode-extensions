{
  "name": "tpl-vscode-csharp",
  "displayName": "C# Extension Pack for Vscode",
  "description": "Essential C# development environment for VSCode - comprehensive .NET tooling with IntelliSense, debugging, testing, and modern C# features",
  "version": "1.0.1",
  "publisher": "templ-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/vscode-extensions",
    "directory": "packages/vscode/csharp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "categories": ["Extension Packs"],
  "keywords": [
    "csharp",
    "c#",
    "dotnet",
    ".net",
    "asp.net",
    "blazor",
    "maui",
    "testing",
    "nuget",
    "extension-pack",
    "development",
    "vscode",
    "csharp"
  ],
  "extensionPack": [
    "ms-dotnettools.csharp",
    "ms-dotnettools.csdevkit",
    "kreativ-software.csharpextensions",
    "formulahendry.dotnet-test-explorer",
    "jorgeserrano.vscode-csharp-snippets",
    "josefpihrt-vscode.roslynator"
  ],
  "extensionDependencies": ["ms-dotnettools.csharp", "ms-dotnettools.csdevkit"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "csharp",
        "path": "./snippets/csharp.json"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+f",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      },
      {
        "key": "f12",
        "command": "editor.action.revealDefinition",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      },
      {
        "key": "shift+f12",
        "command": "editor.action.goToReferences",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      },
      {
        "key": "ctrl+shift+o",
        "command": "workbench.action.gotoSymbol",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      },
      {
        "key": "ctrl+t",
        "command": "workbench.action.showAllSymbols",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      },
      {
        "key": "ctrl+.",
        "command": "editor.action.quickFix",
        "when": "editorTextFocus && editorLangId == 'csharp'"
      }
    ],
    "commands": [
      {
        "command": "templ-project.csharp-vscode.applySettings",
        "title": "Apply C# Extension Pack for Vscode Settings"
      },
      {
        "command": "templ-project.csharp-vscode.resetSettings",
        "title": "Reset C# Extension Pack for Vscode Settings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}
