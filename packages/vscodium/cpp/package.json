{
  "name": "tpl-vscodium-cpp",
  "displayName": "C++ Extension Pack for Vscodium",
  "description": "Essential C/C++ development environment for VSCodium - modern tooling with clang-based language server, CMake/XMake build systems, and advanced debugging",
  "version": "1.0.3",
  "publisher": "templ-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/vscode-extensions",
    "directory": "packages/vscodium/cpp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "categories": [
    "Extension Packs"
  ],
  "keywords": [
    "cpp",
    "c++",
    "c",
    "clang",
    "cmake",
    "xmake",
    "native",
    "systems",
    "embedded",
    "extension-pack",
    "development",
    "vscodium",
    "cpp"
  ],
  "extensionPack": [
    "llvm-vs-code-extensions.vscode-clangd",
    "twxs.cmake",
    "xaver.clang-format",
    "ms-vscode.cmake-tools",
    "tboox.xmake-vscode",
    "jeff-hykin.better-cpp-syntax",
    "cschlosser.doxdocgen",
    "webfreak.debug"
  ],
  "extensionDependencies": [
    "llvm-vs-code-extensions.vscode-clangd",
    "twxs.cmake",
    "xaver.clang-format"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "cpp",
        "path": "./snippets/cpp.json"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+f",
        "command": "clang-format.format",
        "when": "editorTextFocus && (editorLangId == 'cpp' || editorLangId == 'c')"
      },
      {
        "key": "ctrl+shift+i",
        "command": "clangd.switchheadersource",
        "when": "editorTextFocus && (editorLangId == 'cpp' || editorLangId == 'c')"
      },
      {
        "key": "f12",
        "command": "editor.action.revealDefinition",
        "when": "editorTextFocus && (editorLangId == 'cpp' || editorLangId == 'c')"
      },
      {
        "key": "ctrl+f12",
        "command": "editor.action.goToReferences",
        "when": "editorTextFocus && (editorLangId == 'cpp' || editorLangId == 'c')"
      },
      {
        "key": "ctrl+shift+o",
        "command": "workbench.action.gotoSymbol",
        "when": "editorTextFocus && (editorLangId == 'cpp' || editorLangId == 'c')"
      }
    ],
    "commands": [
      {
        "command": "templ-project.cpp-vscodium.applySettings",
        "title": "Apply C++ Extension Pack for Vscodium Settings"
      },
      {
        "command": "templ-project.cpp-vscodium.resetSettings",
        "title": "Reset C++ Extension Pack for Vscodium Settings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}
